      "AllowedGrantTypes": ["client_credentials"],
      "AllowedScopes": ["api1"]
    },
    {
      "ClientId": "mvc",
      "ClientName": "MVC Client",

      // 49C1A7E1-0C79-4A89-A3D6-A37998FB86B0
