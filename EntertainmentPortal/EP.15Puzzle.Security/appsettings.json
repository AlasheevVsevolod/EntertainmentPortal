{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=AspIdUsers.db;"
  },
  "IdentityResources": [
    {
      "Name": "openid",
      "DisplayName": "Your user identifier",
      "Required": true,
      "UserClaims": [
        "sub"
      ]
    },
    {
      "Name": "profile",
      "DisplayName": "User profile",
      "Description": "Your user profile information (first name, last name, etc.)",
      "Required": true,
      "Emphasize": true,
      "UserClaims": [
        "name",
        "family_name",
        "given_name",
        "middle_name",
        "preferred_username",
        "profile",
        "picture",
        "website",
        "gender",
        "birthdate",
        "zoneinfo",
        "locale",
        "updated_at"
      ]
    },
    {
      "Name": "email",
      "DisplayName": "User email",
      "Description": "Your user email",
      "Required": true,
      "Emphasize": true,
      "UserClaims": [
        "email"
      ]
    }
  ],

  "ApiResources": [
    {
      "Name": "pyatnashki_api",
      "DisplayName": "Api for 15Puzzle game",
      "Required": true,
      "Scopes": [
        {
          "Name": "pyatnashki_api"
        }
      ]
    }
  ],

  "Clients": [
    {
      "ClientId": "spa",
      "ClientName": "SPA Client",

      "AllowedGrantTypes": [ "implicit" ],
      "AllowedScopes": [ "openid", "profile", "email", "pyatnashki_api" ],
      "AllowAccessTokensViaBrowser": true,

      "RedirectUris": [
        "http://localhost:4200/auth-callback"
      ],
      "AllowedCorsOrigins": [ "http://localhost:4200" ]
    },
    {
      "ClientId": "swagger",
      "ClientName": "Swagger Client",

      "AllowedGrantTypes": [ "implicit" ],
      "AllowedScopes": [ "pyatnashki_api" ],
      "AllowAccessTokensViaBrowser": true,

      "RedirectUris": [
        "https://localhost:44380/swagger/oauth2-redirect.html"
      ],
      "AllowedCorsOrigins": [ "https://localhost:44380" ]
    }
  ]
}